@model IEnumerable<QLBanhang.Models.HoaDon>

@{
    ViewBag.Title = "Hóa đơn bán hàng";
}

<h2>Danh mục hóa đơn</h2>

<p>
    @Html.ActionLink("Thêm hóa đơn", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã HĐ
        </th>
        <th>
            Ngày lập HĐ
        </th>
        <th>
            Ngày giao hàng
        </th>
        <th>
            Tên khách hàng
        </th>
        <th>
            Nhân viên bán hàng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("Index", "CTHDs", new {MaHD = item.MaHD })">
                @Html.DisplayFor(modelItem => item.MaHD)
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayLapHD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayGiaoHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KhachHang.TenKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nhanvien.HoNV)
            @Html.DisplayFor(modelItem => item.Nhanvien.Ten)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaHD }) |
            @Html.ActionLink("Xem chi tiết", "Details", new { id=item.MaHD }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaHD })
        </td>
    </tr>
}

</table>
