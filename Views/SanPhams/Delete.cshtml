@model QLBanhang.Models.SanPham
@using QLBanhang.Models
@{
    ViewBag.Title = "Delete";
}

<h2>Xóa</h2>

<h3>Xóa sản phẩm này?</h3>
<div>
    <h4>@Model.TenSP</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>

        <dt>
            Đơn vị tính
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Donvitinh)
        </dd>

        <dt>
            Đơn giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Dongia)
        </dd>

        <dt>
            Hình sản phẩm
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.HinhSP)*@
            @Html.Image("../../"+ Model.HinhSP, "", "100")
        </dd>

        <dt>
            Loại sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiSP.TenLoaiSP)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>
